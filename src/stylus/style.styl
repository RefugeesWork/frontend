@import url('https://fonts.googleapis.com/css?family=Maven+Pro:400,700|Raleway:400,700,200')


// ------------------------------------------
// VARIABLES
// ------------------------------------------

// COLORS
$header-font-color = #888
$color1 = #086375
$color2 = #1DD3B0
$color3 = #35012C
$color4 = #AFFC41
$color5 = #B2FF9E


// SIZES
$nav-height = 30px

// ------------------------------------------
//  MIXINS
// ------------------------------------------
media_queries = {
  mobile  : "only screen and (max-width: 600px)",
  tablet  : "only screen and (min-width: 601px) and (max-width: 800px)",
  desktop : "only screen and (min-width: 801px) and (max-width: 1200px)"
  wide    : "only screen and (min-width: 1201px)"
}

for_breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

transition()
  vendor('transition', arguments)

transform()
  vendor('transform', arguments)

transform-origin()
  vendor('transform-origin', arguments)

user-select()
  vendor('user-select', arguments)

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval, deprecatedWebkitStartPoint = false, deprecatedWebkitEndPoint = false)
  background-color startColor
  if deprecatedWebkitStartPoint && deprecatedWebkitEndPoint
    background-image -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

// ------------------------------------------
// GENERAL
// ------------------------------------------

html, body
  margin 0
  padding 0
  background #eee
  

html, body, h1, h2, h3, h4, h5, a, p, li, b, input, textarea, label, a
  font-family "Maven Pro"
  
div, input, textarea, li
  box-sizing border-box

input:focus
  outline none

h1
  font-size 2em
  color $header-font-color

ul
  margin 0
  padding 0

// ------------------------------------------
// GENERAL
// ------------------------------------------


header
  background $color3
  position relative
  
  nav, #logo
    display inline-block
    
  #logo 
    font-size 1.5em
    color #fff
    padding ($nav-height/2)
    margin-left 8px
    font-family "raleway"
    .work
      font-weight bold
      color $color2
    
  nav 
    float right
    position absolute
    top 50%
    right 6px
    transform translate(0%, -50%)
    ul 
      margin 0
      li 
        list-style none
        display inline
        padding 20px
        a
          text-decoration none
          color #eee
          text-transform uppercase
          font-weight bold
    .signin a
      background $color4
      color $color3
      border-radius 20px
      padding 3px 10px 4px 10px
      margin-right -5px


// ------------------------------------------
// JOBS
// ------------------------------------------

#app 
  width 100%
  min-height 100%
  position absolute
  background $color1
  //background url('http://cache2.asset-cache.net/xc/529647695.jpg?v=2&c=IWSAsset&k=2&d=HQzw9EHK2gPIqHLZ2GUgK5OBnnTtGX3tVqKrYZBmzwym6JkqULlqgpeXHQrY_TPt0')
  background url('http://gdj.gdj.netdna-cdn.com/wp-content/uploads/2011/02/background-pattern-design-5.jpg')

#filters
  
  margin 0
  width 20vw
  float left
  min-height 100%
  color #fff
  box-sizing border-box
  transition max-height .4s cubic-bezier(0.7, 0, 0.4, 1)
  //cubic-bezier(0, -0.2, 0.6, 1.2);
  //cubic-bezier(0.7, 0, 0.4, 1)
  .tag
    &:hover
      cursor pointer
      background $color4
  
  .searchbar
    background $color2
    padding 15px 20px

  .filter-expand-button
    display none
    font-size 2em
    float left
    margin  0 20px 0 4px
    &:hover
      cursor pointer
      color $color1
    
  .content
    padding 10px 20px
    overflow hidden
    
  .search
    padding 7px 10px
    font-size 1em
    border-radius 3px
    border 0
    width 100%

  +for_breakpoint(mobile tablet)
    max-height 60px
    overflow hidden
    width 100%
    
    &.filterExpand
      height auto
      max-height 40vh
    
    .filter-expand-button
      display inline-block
      
    .search
      width calc(100% - 58px)


// ------------------------------------------
// JOB BOARD
// ------------------------------------------
#job-board 
  min-height 100vh
  margin 0
  float right
  width 80vw
  box-sizing border-box
  padding 20px
  background #e9e9e9
  
  +for_breakpoint(mobile tablet)
    width 100%
  
  .job-post
    max-width 1020px
    list-style none
    padding 0 0 8px 0
    margin 15px auto
    background #fff
    width 100%
    transition box-shadow .3s ease-out, margin .3s ease-out
    
    .fa
      float left
      padding 14px 15px 15px 15px
      color $color2

    &:hover
      cursor pointer
      
      i
        color #fff
      .title
        background $color2
        color #fff

  .title
    margin 0
    padding 10px 15px
    border-bottom 1px dashed $color2
    color $color3
    transition background .2s ease-out

  .description
    padding 20px 30px 15px 15px
    font-size .9em
    line-height 1.5em
    
  .tags
    margin-left 5px
    padding 1px 9px 3px 9px
    font-size .9em
    
    .tag
      padding 1px 9px 3px 9px
      font-size .9em
      background #dfdfdf

.tag
  display inline-block
  background $color2
  color #000
  margin 0 8px 5px 0
  padding 2px 9px 2px 9px
  border-radius 30px